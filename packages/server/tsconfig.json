{
  "extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"strictPropertyInitialization": false,
		"baseUrl": "./src",
		"allowJs": true,
		"paths": {
			"@modules/*": ["modules/*"],
			"@config/*": ["config/*"],
			"@shared/*": ["shared/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true, 
		"experimentalDecorators": true, 
		"emitDecoratorMetadata": true,
	},
	"include": [
	  "./src/**/*"
	]
}
